<h1>Log In</h1>
<% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
    <% end %>
	<%= form_tag '/sessions/create' do %>
		<%= label_tag :email_or_username %>
      	<%= text_field_tag :email_or_username, @email_or_username %>
      	<%= label_tag :password %>
      	<%= password_field_tag :password %>
      	<%= submit_tag 'Login' %>
<% end %>
